<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#FFCB03"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagePessoaCadastro"
                android:layout_width="61dp"
                android:layout_height="83dp"
                android:src="@drawable/person"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textCadastro"
                android:layout_width="306dp"
                android:layout_height="50dp"
                android:text="Cadastrar EPI"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />


            <EditText
                android:id="@+id/edtEpi"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#FFE235"
                android:ems="10"
                android:inputType="text"
                android:text="Digite o nome da EPI:"
                android:textColor="#836666"
                android:layout_gravity="center"/>



            <EditText
                android:id="@+id/edtCa"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite o nÃºmero CA:"
                android:inputType="number"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>



            <EditText
                android:id="@+id/edtDateValidade"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite a data de validade:"
                android:inputType="date"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/edtDateVencimento"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite a data de vencimento:"
                android:inputType="date"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/btnCadastro"
                android:layout_width="195dp"
                android:layout_height="73dp"
                android:backgroundTint="#004AAD"
                android:text="Cadastrar"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/btnDeletar"
                android:layout_width="195dp"
                android:layout_height="73dp"
                android:backgroundTint="#004AAD"
                android:text="Deletar"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>