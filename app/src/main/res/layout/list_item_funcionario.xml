<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFuncionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFCB03"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageWilson"
                android:layout_width="79dp"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:src="@drawable/person" />

            <TextView
                android:id="@+id/textWilson"
                android:layout_width="167dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="9dp"
                android:layout_marginTop="76dp"
                android:text="Wilson"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textCpfW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:text="324.479.228-20"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/black"
    app:layout_constraintTop_toBottomOf="@+id/cvFuncionario"/>
</androidx.constraintlayout.widget.ConstraintLayout>