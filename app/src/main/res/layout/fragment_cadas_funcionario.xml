<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#FFCB03"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="172dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagePessoa"
                android:layout_width="61dp"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:src="@drawable/person" />

            <TextView
                android:id="@+id/textCadastrarFunc"
                android:layout_width="306dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Cadastrar FuncionÃ¡rio"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textEmail"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite seu e-mail:"
                android:inputType="textEmailAddress"
                android:outlineSpotShadowColor="#000000"
                android:textColor="#836666" />

            <EditText
                android:id="@+id/textSenha"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite sua senha:"
                android:inputType="textPassword"
                android:shadowColor="#995E4141" />

            <EditText
                android:id="@+id/textNome"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite seu nome:"
                android:inputType="text"
                android:textColor="#836666" />

            <EditText
                android:id="@+id/textCpf"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite seu CPF:"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/chkAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Supervisor"/>

            <Button
                android:id="@+id/btnCadastrar"
                android:layout_width="195dp"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:backgroundTint="#004AAD"
                android:text="Cadastrar"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnDeletar"
                android:layout_width="195dp"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#004AAD"
                android:visibility="gone"
                android:text="Deletar"
                android:textSize="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>