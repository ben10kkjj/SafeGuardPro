<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="172dp"
        app:cardBackgroundColor="#FFCB03"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imagePessoa"
                android:layout_width="61dp"
                android:layout_height="83dp"
                android:src="@drawable/person"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textCadastrarFunc"
                android:layout_width="306dp"
                android:layout_height="50dp"
                android:text="Cadastrar FuncionÃ¡rio"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/textEmail"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite seu e-mail:"
                android:inputType="textEmailAddress"
                android:outlineSpotShadowColor="#000000"
                android:textColor="#836666"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/textSenha"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite sua senha:"
                android:inputType="textPassword"
                android:shadowColor="#995E4141"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
               />



            <EditText
                android:id="@+id/textNome"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite seu nome:"
                android:inputType="text"
                android:textColor="#836666"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />



            <EditText
                android:id="@+id/textCpf"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#FFE235"
                android:ems="10"
                android:hint="Digite seu CPF:"
                android:inputType="number"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btnCadastrar"
                android:layout_width="195dp"
                android:layout_height="73dp"
                android:backgroundTint="#004AAD"
                android:text="Cadastrar"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>